{
  "name": "headless.build",
  "license": "MIT",
  "version": "0.0.1",
  "packageManager": "pnpm@8.6.2",
  "workspaces": [
    "packages/cli",
    "templates/*",
    "templates/hydrogen-theme/studio"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:theme": "turbo dev --filter=hydrogen-theme --filter=sanity-studio",
    "deploy:studio": "turbo run deploy --filter=sanity-studio",
    "changeset": "changeset add",
    "version": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "tsup": "^7.2.0",
    "turbo": "^1.10.16"
  }
}
